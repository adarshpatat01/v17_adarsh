<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="split_account_move_inherited_view" model="ir.ui.view">
        <field name="name">split.account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel']" position="after">
                <button string="Split" type="object" class="oe_highlight"
                        name="split_invoice"
                        groups="bi_split_invoice.group_show_split_invoice_button"/>
                <button string="Extract " name="extract_invoice" type="object"
                        groups="bi_split_invoice.group_show_split_invoice_button"/>

            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <button groups="bi_split_invoice.group_show_split_invoice_button"
                        string=" " class="btn" help="Check All records" icon="fa-check-square" name="select_all"
                        type="object"/>
                <button groups="bi_split_invoice.group_show_split_invoice_button"
                        string=" " class="btn" help="UnCheck All records" icon="fa-minus-circle" name="unselect_all"
                        type="object"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='product_id']" position="before">
                <field name="invoice_split" force_save="1"
                       groups="bi_split_invoice.group_show_split_invoice_button"/>
            </xpath>


            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="split_count" invisible="1"/>
                <field name="extract_count" invisible="1"/>
            </xpath>


            <xpath expr="//field[@name='ref']" position="after">
                <field name="is_splited" invisible="1"/>
                <field name="is_extracted" invisible="1"/>
                <field name="is_split_from" invisible="is_splited == False"/>

                <field name="is_extracted_from" invisible="is_extracted == False"/>
            </xpath>


            <xpath expr="//div[hasclass('oe_button_box')]" position='inside'>
                <button class="oe_stat_button" type="action"
                        invisible="split_count == 0"
                        string="Splited"
                        name="%(bi_split_invoice.account_move_splitting_action)d"
                        icon="fa-scissors">
                    <field name="split_count" readonly="1" widget="statinfo" string="Split"/>
                </button>
                <button class="oe_stat_button" type="action"
                        invisible="extract_count == 0"
                        string="Extracted"
                        name="%(bi_split_invoice.account_move_extracted_action)d"
                        icon="fa-pencil-square-o">
                    <field name="extract_count" readonly="1" widget="statinfo" string="Extracted"/>
                </button>
            </xpath>

        </field>
    </record>


</odoo>
	


