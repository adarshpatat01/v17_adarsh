<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="invoice_split_wizard_form" model="ir.ui.view">
        <field name="name">invoice_split_wizard_form</field>
        <field name="model">invoice.split.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="split_option"/>
                        <field name="invoice_id" options="{'no_create': True, 'no_open': True}"
                            invisible="split_option == 'new'"
                            required="split_option =='existing'" domain="[('id','in',invoice_ids)]"/>
                        <field name="invoice_ids" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name='split_invoice' string="Split"
                            type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="invoice_split_wizard_action" model="ir.actions.act_window">
        <field name="name">Invoice Split Wizard</field>
        <field name="res_model">invoice.split.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>

    </record>
</odoo>